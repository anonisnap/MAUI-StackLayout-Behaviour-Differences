<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StackLayoutIssues.VerticalStackLayoutExampleView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="VerticalStackLayoutExampleView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--#region Informative Labels-->
        <Label
            Grid.Row="0"
            HorizontalOptions="CenterAndExpand"
            Text="Vertical StackLayout [HorizontalOptions]" />
        <!--#endregion Informative Labels-->

        <!--  VerticalStackLayout  -->
        <VerticalStackLayout Grid.Row="1">
            <Label VerticalOptions="StartAndExpand" Text="A Short Text" />
            <Label VerticalOptions="EndAndExpand" Text="A Much Longer Text To Fill Space" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>